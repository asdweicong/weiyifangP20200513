

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>登入</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <link rel="stylesheet" href="/componentes/layui/css/layui.css" media="all">
    <link rel="stylesheet" href="/componentes/stylesheets/login.css" media="all">
    <script src="/componentes/layui/layui.js"></script>
    <script src="/componentes/javascripts/jquery.min.js"></script>
    <script src="/componentes/javascripts/matrix.js"></script>
</head>
<body>

<div class="layadmin-user-login layadmin-user-display-show" id="LAY-user-login" style="background-color: #2E363F;">
    <div id="loginbox">
        <div class="control-group normal_text">
            <h3>卫一方后台管理系统</h3>
        </div>
        <form id="loginform" class="form-vertical layui-form">
            <div class="control-group">
                <div class="controls">
                    <div class="main_input_box">
                        <span class="add-on bg_lg layadmin-user-login-icon layui-icon layui-icon-username"><i class="icon-user"></i></span>
                        <input type="text" name="username" id="LAY-user-login-username" lay-verify="required" placeholder="用户名" class="span3">
                        <div></div>
                    </div>
                </div>
            </div>
            <div class="control-group">
                <div class="controls">
                    <div class="main_input_box">
                        <span class="add-on bg_ly layadmin-user-login-icon layui-icon layui-icon-password"><i class="icon-lock"></i></span>
                         <input type="password" name="password" id="LAY-user-login-password" lay-verify="required" placeholder="密码" class="span3">
                    </div>
                </div>
            </div>
            <div class="control-group">
                <div class="controls">
                    <span class="pull-right">
                        <button type="button" class="btn btn-success btn-login logBt" lay-submit lay-filter="LAY-user-login-submit" style="font-size: 18px;">登 入</button>
                    </span>
                </div>
            </div>
        </form>
    </div>
</div>

<script>
layui.use(['table', 'form','laydate'], function(){
        var table = layui.table, form = layui.form;
        var laydate = layui.laydate;
        form.on('submit(LAY-user-login-submit)', function(obj){
            var fromData = obj.field;
            $.ajax({
                type: "POST",
                url: "/admin/login",
                data: fromData,
                success: function (data) {
                    layer.msg(data.message);
                    if (data.resultType == 0) {
                        location.href='/admin'
                    }
                }
            });
        });
    });
</script>
</body>
</html>